<% layout('layouts/app') %>

<div class="row mb-5">
  <div class="col-6">
    <div class="card">
      <img
        src="<%= place.image %> "
        alt="<%= place.title %>"
        class="card-img-top"
      />
      <div class="card-body">
        <h5 class="card-title"><%= place.title %></h5>
        <p class="card-text"><%= place.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <h5>Lokasi</h5>
          <p><%= place.location %></p>
        </li>
        <li class="list-group-item">
          <h5>Price</h5>
          <p><%= place.price %></p>
          <p><b>Author</b> : <%= place.author.username %></p>
        </li>
      </ul>
      <% if(currentUser && place.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a
          href="/places/<%= place._id %>/edit"
          class="card-link btn btn-warning text-white"
          >Edit</a
        >
        <form
          action="/places/<%= place._id %>?_method=DELETE"
          method="POST"
          style="display: inline !important"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) {%>
    <h3>Leave a review</h3>
    <form
      action="/places/<%= place._id %>/reviews"
      method="POST"
      class="validated-form mb-3"
      novalidate
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
          class="form-range"
        />
      </div>
      <div class="mb-3">
        <label for="review">Review</label>
        <textarea
          name="review[body]"
          id="body"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please fill out field!</div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <% } %>
    <% for(review of place.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating : <%= review.rating %></h5>
        <p class="card-text"><%= review.body %></p>
        <form
          action="/places/<%= place._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
